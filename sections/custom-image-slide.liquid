{%- style -%}
  .img-slider-container{
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  .custom-image-slider {
    display: flex;
    transition: transform 1s ease;
    margin: 0;
    padding: 0;
    flex-wrap: nowrap;
}
  .image-slide{
    min-width:100%;
  }
  .image-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
  .image-slider-button {
      border: none;
      background: none;
      width: auto;
      padding: 0;
  }
  .image-slider-button .svg-wrapper {
    width: 46px;
    height: unset;
}
  .image-slider-buttons {
      display: flex;
      width: 100%;
      justify-content: space-between;
      margin-top: 30px;
      align-items: center;
  }
  .dots-btn .dots {
    border: 1px solid #f67f9e;
    width: 10px;
    height: 10px;
    display: block;
    border-radius: 50%;
}
 .dots-btn .dots.active {
    background: #f67f9e;
}
  .dots-btn {
    display: flex;
    gap: 5px;
}
  .image-slider-buttons .arrow {
    display: flex;
    align-items: center;
    gap: 20px;
}

  .img-with-slide .page_width{
    padding: 0 50px;
  }
  /* image-with-text */
.img-with-slide .image-with-text__content{
  height:unset;
}
.thumbnail-img {
  display: flex;
  gap: 30px;
  overflow: hidden;
  margin-top: 70px;
  width: 80%;
}

.thumb-image-slide {
  width:calc(50% - 30px);
  display: none;
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.thumb-image-slide img {
  width: 100%;
  height: auto;
  object-fit: cover;
  cursor: pointer;
}

.thumb-image-slide img:hover {
  border-color: #0073e6;
}

/* reco */

.reco_grid__item img {
    width: 50%;
}
.reco_grid__item a{
  text-decoration:none;
  color:#000;
}
.reco_grid__item {
    text-align: center;
    width: calc(50% - 10px);
}
    .cust-rec {
        background: #fff;
        padding: 0 10px;
      position: relative;
      z-index: 999;
      overflow: hidden;
    }
.reco ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 10px;
   min-width: 100%;
  align-items: end;
}
 .cust-rec .reco .card-wrapper {
    background: #fff;
    padding: 10px;
}
.reco {
    display: flex;
    transition: transform 1s ease;
    width: 100%;
    gap:10px;
}
  .is-empty .cust-rec {
    display: none;
}
.cust-rec {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
    border-bottom: 1px solid #ccc;
    margin-bottom: 20px;
    padding-bottom: 20px;
}
.rec-dots {
    display: flex;
    gap: 5px;
}
.rec-dots .rec-dot {
    width: 10px;
    height: 10px;
    border: 1px solid #ccc;
    border-radius: 50%;
    cursor: pointer;
}
.rec-dots .rec-dot.active {
    background: #8c8b8b;
}
.cust-rec .rec-prev, .rec-next{
  display:none;
}
.product__info-wrapper .button {
    overflow: hidden;
    gap: 8px;
}
.product__info-wrapper .button:before {
    background-image: linear-gradient(90deg,transparent,hsla(0,0%,100%,.3),transparent);
    content: "";
    height: 100%;
    left: -150%;
    position: absolute;
    top: 0;
    transform: skew(20deg);
    width: 150%;
    animation: leftToRightShade 1.5s cubic-bezier(.01,.56,1,1) infinite;
    display: block;
    z-index: 1;
}
@keyframes leftToRightShade{
100% {
    left: 150%;
}
}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
