<script>
    class Slider2 {
  constructor(imgSliderElement, imPrevButton, imgNextButton, imgDotsContainer, thumbContainer) {
    this.imgSliderElement = imgSliderElement;
    this.slides = imgSliderElement.children;
    this.prevButton = imPrevButton;
    this.nextButton = imgNextButton;
    this.dotsContainer = imgDotsContainer;
    this.thumbContainer = thumbContainer;
    this.thumbnails = thumbContainer.children;
    this.currentIndex = 0;
    this.totalSlides = this.slides.length;

    this.createDots();
    this.updateSlider();

    this.prevButton.addEventListener('click', () => this.moveSlide(-1));
    this.nextButton.addEventListener('click', () => this.moveSlide(1));
    this.dotsContainer.addEventListener('click', (e) => this.dotClick(e));
    this.thumbContainer.addEventListener('click', (e) => this.thumbnailClick(e));
  }

  createDots() {
    for (let i = 0; i < this.totalSlides; i++) {
      const dot = document.createElement('span');
      dot.classList.add('dots');
      this.dotsContainer.appendChild(dot);
    }
    this.dots = this.dotsContainer.children;
  }

  updateSlider() {
    // Update main slider
    this.imgSliderElement.style.transform = `translateX(-${this.currentIndex * 100}%)`;

    // Update dots
    for (let i = 0; i < this.totalSlides; i++) {
      if (i === this.currentIndex) {
        this.dots[i].classList.add('active');
      } else {
        this.dots[i].classList.remove('active');
      }
    }

    // Update thumbnails (carousel effect)
    const startIndex = Math.max(this.currentIndex - 1, 0); // Show two thumbnails at a time
    const endIndex = Math.min(startIndex + 2, this.totalSlides);

    for (let i = 0; i < this.thumbnails.length; i++) {
      if (i >= startIndex && i < endIndex) {
        this.thumbnails[i].style.display = 'block'; // Show current thumbnails
      } else {
        this.thumbnails[i].style.display = 'none'; // Hide others
      }
    }
  }

  moveSlide(step) {
    this.currentIndex += step;

    if (this.currentIndex < 0) {
      this.currentIndex = this.totalSlides - 1;
    } else if (this.currentIndex >= this.totalSlides) {
      this.currentIndex = 0;
    }
    this.updateSlider();
  }

  dotClick(e) {
    if (e.target.classList.contains('dots')) {
      let index;
      for (let i = 0; i < this.dots.length; i++) {
        if (this.dots[i] === e.target) {
          index = i;
          break;
        }
      }
      this.currentIndex = index;
      this.updateSlider();
    }
  }

  thumbnailClick(e) {
    if (e.target.tagName === 'IMG') {
      let index;
      for (let i = 0; i < this.thumbnails.length; i++) {
        if (this.thumbnails[i].contains(e.target)) {
          index = i;
          break;
        }
      }
      this.currentIndex = index;
      this.updateSlider();
    }
  }
}

